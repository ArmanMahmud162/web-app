<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
    <h3>Save Department </h3>
<div >
    <form method="POST" id="DepartmentForm">
        <center> <table >
            <tr>
                <td>
                    <label for="Code">Code</label>
                </td>
                <td>
                    <input type="text" id="Code" name="Code"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Name">Name</label>
                </td>
                <td>
                    <input type="text" id="Name" name="Name"/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Save"/>
                </td>
            </tr>
        </table></center>
    </form>
    <div style="color: green">@ViewBag.Message</div>
</div>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script>
        $(document).ready(function() {
            $("#DepartmentForm").validate({
                rules: {
                    Code: {
                        required: true,
                        minlength: 2,
                        maxlength: 7

                    },
                    Name: {
                        required: true,
                        number: false

                    }


                },
                messages: {
                    Code: {
                        required: "Please enter a Code",
                        minlength: "Your Code must consist of at least 2 characters",
                        Maxlength: "Your Code must consist of at least 2 characters"
                    },
                    Name: {
                        required: "Please enter a Department Name",
                        number: "Please Dont Use Number"

                    }
                }
            });
        });
    </script>
}


</body>
</html>

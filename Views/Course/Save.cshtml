@using UniversityManagementApp.Models

@{
    // Layout = null;
    List<Department> departments = ViewBag.SaveDepartment;
    List<Semester> semesters = ViewBag.Semester;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
<div>
    <h3>Save Course </h3>
    <form method="post" id="CourseForm">
        <center>
            <table>
                <tr>
                    <td>
                        <label for="Code"> Code </label>
                    </td>
                    <td>
                        <input type="text" id="Code" name="Code"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Name"> Name </label>
                    </td>
                    <td>
                        <input type="text" id="Name" name="Name"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Credit"> Credit </label>
                    </td>
                    <td>
                        <input type="text" id="Credit" name="Credit"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Description"> Description </label>
                    </td>
                    <td>
                        <input type="text" id="Description" name="Description"/>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="DepartmentId">Department</label>
                    </td>
                    <td>
                        <select id="DepartmentId" name="DepartmentId">
                            <option value="">--SELECT--</option>
                            @foreach (Department department in departments)
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="SemesterId">Semester</label>
                    </td>
                    <td>
                        <select id="SemesterId" name="SemesterId">
                            <option value="">--SELECT--</option>
                            @foreach (Semester semester in semesters)
                            {
                                <option value="@semester.Id">@semester.Semesterr</option>
                            }
                        </select>
                    </td>
                </tr>


                <tr>
                    <td> </td>
                    <td>
                        <input type="submit" value="Save"/>
                    </td>
                </tr>
            </table>
        </center>
    </form>
    <div> @ViewBag.Message</div>
</div>
    @section scripts{


        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>


        <script>
            $(document).ready(function() {
                $("#CourseForm").validate({
                    rules: {
                        Code: {
                            required: true,
                            minlength: 5
                        },
                        Name: "required",
                        Credit: "required"

                    },
                    messages: {
                        Code: {
                            required: "Please enter a Subject Code",
                            minlength: "Your Code must consist of at least 5 characters"
                        },
                        Name: "Please enter Subject Name",
                        Credit: "Please enter Subject Credit"

                    }
                });
            });
        </script>
    }
</body>
</html>
